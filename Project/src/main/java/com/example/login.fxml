<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<GridPane 
    fx:id="gridPane" 
    xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" stylesheets="login.css"
    fx:controller="com.example.Login_Controller"
    alignment="center" hgap="10" vgap="10"
    styleClass="background">
    
    <VBox styleClass="whiteContainer" spacing="15">
    
        <ImageView>
            <Image url="NUlogo.png"/>
        </ImageView>

        <Label text="Login" styleClass="title-label"/>

        <GridPane alignment="center" gridLinesVisible="true">
            <Label text="Email:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Label text="Password:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

            <TextField fx:id="emailField" promptText="Enter your email" styleClass="field" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
            <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="field" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
            <!-- <HyperLink text="Forgot password ?" onAction="#handleLogin" GridPane.columnIndex="3" GridPane.rowIndex="3"/> -->
            <Label fx:id="messageLabel" text="" styleClass="error-label"/>
        </GridPane>

        <Button text="Login" onAction="#handleLogin"/>
        <Button text="Sign up" onAction="#handleSignUpScene"/>
    </VBox>
</GridPane>
