<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.BookVBoxController" fx:id="scrollVBox" styleClass="books">
    
    <ImageView fx:id="bookImage">
        <Image url="TempBook.png" /> 
    </ImageView>
    <Label fx:id="bookTitle" text="Can't Hurt Me" styleClass="book-title"/>
    <HBox alignment="CENTER" spacing="5">
        <VBox>
            <Button fx:id="descriptionButton" text="description" styleClass="description-button"/>
            <Button fx:id="borrowButton" text="borrow" styleClass="borrow-button"/>
        </VBox>
        <VBox alignment="CENTER" spacing="5">
            <Label text="Remaining Books" styleClass="remaining-label"/>
            <Label fx:id="remainingBooksLabel" text="13" styleClass="remaining-value"/>
        </VBox>
    </HBox>

</VBox>