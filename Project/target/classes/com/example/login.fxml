<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="gridPane" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Login_Controller" alignment="center" hgap="10" vgap="10" stylesheets="login.css">
    <VBox spacing="5">
        <Label text="Login" styleClass="title-label"/>
        <Label text="Username:"/>
        <TextField fx:id="usernameField" promptText="Enter your username"/>
        <Label text="Password:"/>
        <PasswordField fx:id="passwordField" promptText="Enter your password"/>
        <Button text="Login" onAction="#handleLogin"/>
        <Button text="Sign up" onAction="#handleLogin"/>
        <Button text="Forgot passwords" onAction="#handleLogin"/>
        <Label fx:id="messageLabel" text="" styleClass="error-label"/>
        
    </VBox>
</GridPane>
